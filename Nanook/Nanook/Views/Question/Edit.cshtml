@model Nanook.Models.QuestionEditViewModel

@{
    ViewBag.Title = "Edit Question";
}

<h2>Ask Question</h2>
<p>
    Use the form below to edit your question. 
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) { 
    <div>
        <fieldset>
            <div class="editor-label">
                @Html.LabelFor(m => m.Title)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Title)
                @Html.ValidationMessageFor(m => m.Title)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Question)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Question)
                @Html.ValidationMessageFor(m => m.Question)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Tags) 
                <i>
                    Please use comma ',' to separate the tags.
                </i>
            </div>
            <div class="editor-field">
                <i>
                    Currently it's not allowed to update the tags.
                </i>
                @Html.TextBoxFor(m => m.Tags, new { disabled = "disabled" })
            </div>

            @Html.HiddenFor(m => m.ID)

            <p>
                <input type="submit" value="Submit" />
            </p>
        </fieldset>
    </div>
}

