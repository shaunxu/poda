@model Nanook.Models.FeedbackCreateViewModel

@using Nanook.Shared;
@{
    ViewBag.Title = "Add your Feedbacl";
}

<h2>Add your feedback</h2>

<h4>
    <img src="/Content/outstanding.png" alt="Question" />
    @Model.QuestionTitle
</h4>

<div>
    @Html.TextBlock(Model.QuestionContent)
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) { 
    <div>
        <fieldset>
            <div class="editor-label">
                @Html.LabelFor(m => m.Feedback)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.Feedback)
                @Html.ValidationMessageFor(m => m.Feedback)
            </div>
            
            @Html.HiddenFor(m => m.QuestionID)
            @Html.HiddenFor(m => m.MemberID)

            <p>
                <input type="submit" value="Submit" />
            </p>
        </fieldset>
    </div>
}
